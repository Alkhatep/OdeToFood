@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button> 
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restuarant in Model.Restaurants)
            {
                <tr>
                    <td>@restuarant.Name</td>
                    <td>@restuarant.Location</td>
                    <td>@restuarant.Cuisine</td>
                    <td>
                        <a class="btn btn-lg" asp-page="./Detail" 
                           asp-route-restaurantId="@restuarant.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
</table>


<div>@Model.Message</div>